@model BanXeCu.Models.Post

@{
    ViewBag.Title = "Renew";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-uppercase text-danger">Gia hạn bài đăng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group" style="width: 30%; margin: 0 auto">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PostID)
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        @Html.HiddenFor(model => model.Content)
        @Html.HiddenFor(model => model.MemID)
        @Html.LabelFor(model => model.TimeStart)
        <input type="date" name="TimeStart" id="TimeStart" value="@Model.TimeStart.ToString("yyyy-MM-dd")" class="form-control" readonly/>
        @Html.LabelFor(model => model.ExpiredDate)
        @Html.EditorFor(model => model.ExpiredDate, new { htmlAttributes = new { @class = "form-control", min = Model.ExpiredDate.ToString("yyyy-MM-dd") } })
        @Html.HiddenFor(model => model.VideoLink)
        @Html.HiddenFor(model => model.PostType)
        @Html.HiddenFor(model => model.Sold)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.CarModel)
        @Html.HiddenFor(model => model.Family)
        @Html.HiddenFor(model => model.Price)
        @Html.HiddenFor(model => model.ManufactureYear)
        @Html.HiddenFor(model => model.ComeFrom)
        @Html.HiddenFor(model => model.Used)
        @Html.HiddenFor(model => model.Distance)
        @Html.HiddenFor(model => model.Size)
        @Html.HiddenFor(model => model.Length)
        @Html.HiddenFor(model => model.Weight)
        @Html.HiddenFor(model => model.CylinderCapacity)
        @Html.HiddenFor(model => model.FuelCapacity)
        @Html.HiddenFor(model => model.TireInfo)
        @Html.HiddenFor(model => model.WheelBase)
        @Html.HiddenFor(model => model.MaxSeatingCapacity)
        @Html.HiddenFor(model => model.DriveType)
        @Html.HiddenFor(model => model.Transmission)
        @Html.HiddenFor(model => model.NumDoor)

        <div class="form-group text-center">
                <input type="submit" value="Gia hạn" class="btn btn-success" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
